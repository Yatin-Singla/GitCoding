{
  "manifest_version": 3,
  "name": "LeetCode to GitHub",
  "version": "1.0",
  "description": "Automatically saves LeetCode solutions to GitHub",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "tabs"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"]
    }
  ]
} 